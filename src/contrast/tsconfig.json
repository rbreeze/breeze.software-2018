{
  "compilerOptions": {
    "outDir": "./../../dist/app",
    "sourceMap": true,
    "noImplicitAny": true,
    "target": "es6",
    "jsx": "react-jsx",
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "declaration": false,
    "lib": [
      "es2017",
      "dom"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "./**/*"
  ],
  "exclude": [
    "node_modules",
    "./**/*.test.ts",
    "./**/*.test.tsx"
  ]
}
